doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css",
      rel="stylesheet",
      crossorigin="anonymous",
      referrerpolicy="no-referrer"
    )
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH",
      crossorigin="anonymous"
    )
    link(rel="stylesheet", href="/admin/css/style.css")
    link(rel="stylesheet", href="/css/detail.css")
    link(rel="stylesheet", href="/css/admin.css")
  body
    if (role && role.permissions && role.permissions.length > 0)
      include ../partials/header.pug

      .d-flex
        aside.d-none.d-md-block.bg-light.border-end(style="min-width: 200px;")
          include ../partials/sidebar.pug

        main.main-content.flex-grow-1
          .container-fluid.py-4
            block main

      include ../partials/sidebar-offcanvas.pug

      script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js", integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r", crossorigin="anonymous")
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js", integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy", crossorigin="anonymous")
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
      script(src="/admin/js/script.js")
      script(src="/admin/js/product.js")
      script(src="/tinymce/tinymce.min.js")
      script(src="/admin/js/tinymce-config.js")

      block script
    else
      .container.text-center.mt-5
        h1 Bạn không có quyền truy cập
